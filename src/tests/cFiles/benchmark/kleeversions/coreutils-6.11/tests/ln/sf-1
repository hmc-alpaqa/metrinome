if test "$VERBOSE" = yes; then
  set -x
  ln --version
fi

# Make sure we get English translations.
. $srcdir/../lang-default
. $srcdir/../test-lib.sh

echo foo > a || framework_failure
ln -s . b || framework_failure

fail=0
ln -sf a b > err 2>&1 && fail=1
case `cat err` in
  *'are the same file') ;;
  *) fail=1 ;;
esac

(exit $fail); exit $fail
