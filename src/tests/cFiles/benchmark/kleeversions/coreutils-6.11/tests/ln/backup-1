# Based on a problem report from Jamie Lokier.

if test "$VERBOSE" = yes; then
  set -x
  ln --version
fi

. $srcdir/../test-lib.sh

touch a b || framework_failure

ln b b~ || fail=1
ln -f --b=simple a b || fail=1

(exit $fail); exit $fail
