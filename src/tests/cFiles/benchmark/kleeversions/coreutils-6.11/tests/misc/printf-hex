prog="$abs_top_builddir/src/printf"

if test "$VERBOSE" = yes; then
  set -x
  "$prog" --version
fi

. $srcdir/../test-lib.sh


fail=0

"$prog" '\x7e3\n' > out || fail=1
cat <<\EOF > exp
~3
EOF

compare out exp || fail=1

(exit $fail); exit $fail
