. $srcdir/../test-lib.sh

# skip this test if arch isn't being built.
case " $built_programs " in
  *" arch "*) ;;
  *) skip_test_ 'not building arch';;
esac

if test "$VERBOSE" = yes; then
  set -x
  arch --version
fi

fail=0

arch > out || fail=1
uname -m > exp || fail=1

compare out exp || fail=1

(exit $fail); exit $fail
