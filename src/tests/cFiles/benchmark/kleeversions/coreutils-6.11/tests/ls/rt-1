. $srcdir/../lang-default

if test "$VERBOSE" = yes; then
  set -x
  ls --version
  touch --version
fi

. $srcdir/../test-lib.sh

date=1998-01-15

touch -d "$date" c || framework_failure
touch -d "$date" a || framework_failure
touch -d "$date" b || framework_failure

fail=0

ls -1t a b c > out || fail=1
cat <<EOF > exp
a
b
c
EOF
compare out exp || fail=1

rm -rf out exp
ls -1rt a b c > out || fail=1
cat <<EOF > exp
c
b
a
EOF
compare out exp || fail=1

(exit $fail); exit $fail
