if test "$VERBOSE" = yes; then
  set -x
  mkdir --version
fi

. $srcdir/../test-lib.sh

ln -s . slink || framework_failure

fail=0
mkdir -p slink/x || fail=1
test -d x || fail=1

(exit $fail); exit $fail
